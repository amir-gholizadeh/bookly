{% extends 'base.html.twig' %}

{% block title %}Edit User Roles{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Edit User Roles - {{ user.name }}</h1>

    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-header">
            <div class="d-flex align-items-center">
                {% if user.profilePicturePath %}
                    <img src="{{ asset('uploads/profile_pictures/' ~ user.profilePicturePath) }}"
                         alt="{{ user.name }}" style="max-width: 50px; max-height: 50px;" class="rounded-circle me-3">
                {% else %}
                    <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center me-3"
                         style="width: 50px; height: 50px;">
                        {{ user.name|first|upper }}
                    </div>
                {% endif %}
                <div>
                    <h5 class="mb-0">{{ user.name }}</h5>
                    <small>{{ user.email }}</small>
                </div>
            </div>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.roles, 'User Roles') }}
                    <div class="mt-2">
                        {{ form_widget(form.roles) }}
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="{{ path('admin_users') }}" class="btn btn-secondary">Cancel</a>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}