{% extends 'base.html.twig' %}

{% block title %}Manager Dashboard{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Manager Dashboard</h1>

    {% for label, messages in app.flashes %}
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                {{ message }}
            {% endfor %}
        </div>
    {% endfor %}

    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Book Management</h3>
                <a href="{{ path('book_new') }}" class="btn btn-light">
                    <i class="fas fa-plus"></i> Add New Book
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Cover</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Genre</th>
                            <th>Pages</th>
                            <th>Reviews</th>
                            <th>Rating</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for book in books %}
                            <tr>
                                <td>
                                    {% if book.coverImagePath %}
                                        <img src="{{ asset('uploads/cover_images/' ~ book.coverImagePath) }}"
                                             alt="{{ book.title }}" style="height: 60px;">
                                    {% else %}
                                        <img src="{{ asset('uploads/cover_images/default_cover.jpg') }}"
                                             alt="Default Cover" style="height: 60px;">
                                    {% endif %}
                                </td>
                                <td>{{ book.title }}</td>
                                <td>{{ book.author }}</td>
                                <td>{{ book.genre }}</td>
                                <td>{{ book.numberOfPages }}</td>
                                <td>{{ book.reviews|length }}</td>
                                <td>
                                    {% if book.reviews|length > 0 %}
                                        <span class="text-warning">
                                            {% set avgRating = book.averageRating %}
                                            {% for i in 1..5 %}
                                                {% if i <= avgRating %}
                                                    <i class="fas fa-star"></i>
                                                {% elseif i <= avgRating + 0.5 %}
                                                    <i class="fas fa-star-half-alt"></i>
                                                {% else %}
                                                    <i class="far fa-star"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </span>
                                    {% else %}
                                        <span class="text-muted">No ratings</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('book_show', {'id': book.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                        <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ book.id }}">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal{{ book.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ book.id }}" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteModalLabel{{ book.id }}">Confirm Delete</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Are you sure you want to delete <strong>{{ book.title }}</strong>? This action cannot be undone.
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form method="post" action="{{ path('book_delete', {'id': book.id}) }}">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                                                        <button class="btn btn-danger">Delete Book</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Manager Tools</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body text-center">
                            <i class="fas fa-comments fa-3x mb-3 text-primary"></i>
                            <h4>Reviews</h4>
                            <p>Manage user reviews</p>
                            <a href="{{ path('all_reviews') }}" class="btn btn-primary">View All Reviews</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body text-center">
                            <i class="fas fa-book fa-3x mb-3 text-success"></i>
                            <h4>Books</h4>
                            <p>Add or update books</p>
                            <a href="{{ path('book_new') }}" class="btn btn-success">Add New Book</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-3">
                        <div class="card-body text-center">
                            <i class="fas fa-cog fa-3x mb-3 text-secondary"></i>
                            <h4>Main Site</h4>
                            <p>Return to main site</p>
                            <a href="{{ path('main') }}" class="btn btn-secondary">Go to Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}