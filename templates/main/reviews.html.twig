{% extends 'base.html.twig' %}

{% block title %}All Reviews{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">All Reviews</h1>

    <div class="card mb-4">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <span class="me-2">Sort by:</span>
                    <select class="form-select form-select-sm w-auto" onchange="window.location.href='{{ path('all_reviews') }}?sort=' + this.value + '{% if app.request.query.get('search') %}&search={{ app.request.query.get('search') }}{% endif %}'">
                        <option value="date_desc" {% if app.request.query.get('sort') == 'date_desc' or app.request.query.get('sort') is null %}selected{% endif %}>Most Recent</option>
                        <option value="date_asc" {% if app.request.query.get('sort') == 'date_asc' %}selected{% endif %}>Oldest First</option>
                        <option value="rating_desc" {% if app.request.query.get('sort') == 'rating_desc' %}selected{% endif %}>Rating (High to Low)</option>
                        <option value="rating_asc" {% if app.request.query.get('sort') == 'rating_asc' %}selected{% endif %}>Rating (Low to High)</option>
                        <option value="book_asc" {% if app.request.query.get('sort') == 'book_asc' %}selected{% endif %}>Book (A-Z)</option>
                        <option value="book_desc" {% if app.request.query.get('sort') == 'book_desc' %}selected{% endif %}>Book (Z-A)</option>
                    </select>
                </div>
                <form action="{{ path('all_reviews') }}" method="get" class="d-flex">
                    {% if app.request.query.get('sort') %}
                        <input type="hidden" name="sort" value="{{ app.request.query.get('sort') }}">
                    {% endif %}
                    <div class="input-group">
                        <input type="text" name="search" id="review-search-autocomplete" class="form-control form-control-sm" placeholder="Search reviews..." value="{{ app.request.query.get('search') }}">
                        <button class="btn btn-outline-secondary btn-sm" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {% if reviews|length > 0 %}
        {% for review in reviews %}
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        {% if review.reviewer.profilePicturePath %}
                            <img src="{{ asset('uploads/profile_pictures/' ~ review.reviewer.profilePicturePath) }}"
                                 alt="{{ review.reviewer.name }}" class="rounded-circle me-2" style="width: 40px; height: 40px;">
                        {% else %}
                            <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center me-2"
                                 style="width: 40px; height: 40px;">
                                {{ review.reviewer.name|first|upper }}
                            </div>
                        {% endif %}
                        <div>
                            <strong>{{ review.reviewer.name }}</strong> reviewed
                            <a href="{{ path('book_show', {'id': review.book.id}) }}">
                                <strong>{{ review.book.title }}</strong>
                            </a>
                            <div class="text-warning">
                                {% for i in 1..5 %}
                                    {% if i <= review.rating %}
                                        <i class="fas fa-star"></i>
                                    {% else %}
                                        <i class="far fa-star"></i>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="text-muted">
                        <small>{{ review.createdAt|date('F j, Y') }}</small>
                        {% if review.updatedAt %}
                            <small>(Edited: {{ review.updatedAt|date('F j, Y') }})</small>
                        {% endif %}
                    </div>
                </div>
                <div class="card-body">
                    <p>{{ review.reviewText|nl2br }}</p>
                </div>
                <div class="card-footer text-end">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') and (app.user == review.reviewer or is_granted('ROLE_MANAGER')) %}
                        <a href="{{ path('review_edit', {'id': review.id}) }}" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <form method="post" action="{{ path('review_delete', {'id': review.id}) }}" style="display: inline-block"
                              onsubmit="return confirm('Are you sure you want to delete this review?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                            <button class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        {% endfor %}

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {% if currentPage > 1 %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('all_reviews', {'page': currentPage - 1, 'sort': app.request.query.get('sort'), 'search': app.request.query.get('search')}) }}">Previous</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                {% endif %}

                {% for i in 1..totalPages %}
                    <li class="page-item {% if i == currentPage %}active{% endif %}">
                        <a class="page-link" href="{{ path('all_reviews', {'page': i, 'sort': app.request.query.get('sort'), 'search': app.request.query.get('search')}) }}">{{ i }}</a>
                    </li>
                {% endfor %}

                {% if currentPage < totalPages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('all_reviews', {'page': currentPage + 1, 'sort': app.request.query.get('sort'), 'search': app.request.query.get('search')}) }}">Next</a>
                    </li>
                {% else %}
                    <li class="page-item disabled">
                        <span class="page-link">Next</span>
                    </li>
                {% endif %}
            </ul>
        </nav>
    {% else %}
        <div class="alert alert-info">
            No reviews found. {% if app.request.query.get('search') %}Try a different search term.{% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    $("#review-search-autocomplete").autocomplete({
        source: function(request, response) {
            $.ajax({
                url: "{{ path('review_search_suggestions') }}",
                dataType: "json",
                data: {
                    q: request.term
                },
                success: function(data) {
                    response($.map(data, function(item) {
                        return {
                            label: item.value + ' (' + item.type + ')',
                            value: item.value
                        };
                    }));
                }
            });
        },
        minLength: 2,
        select: function(event, ui) {
            $("#review-search-autocomplete").val(ui.item.value);
            $(this).closest("form").submit();
            return false;
        }
    }).autocomplete("instance")._renderItem = function(ul, item) {
        // Customize the appearance of suggestion items
        let icon = 'comment';
        if (item.label.includes('(book)')) {
            icon = 'book';
        } else if (item.label.includes('(reviewer)')) {
            icon = 'user';
        }

        return $("<li>")
            .append("<div><i class='fas fa-" + icon + " me-2'></i>" + item.label + "</div>")
            .appendTo(ul);
    };
});
</script>
{% endblock %}
