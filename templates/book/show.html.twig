{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>{{ book.title }}</h2>
            <h5 class="text-muted">by {{ book.author }}</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    {% if book.coverImagePath %}
                        <img src="{{ asset('uploads/cover_images/' ~ book.coverImagePath) }}"
                             alt="{{ book.title }}" class="img-fluid">
                    {% else %}
                        <img src="{{ asset('uploads/cover_images/default_cover.jpg') }}"
                             alt="Default Cover" class="img-fluid">
                    {% endif %}
                </div>
                <div class="col-md-8">
                    <div class="mb-3">
                        <strong>Genre:</strong> {{ book.genre }}
                    </div>
                    <div class="mb-3">
                        <strong>Pages:</strong> {{ book.numberOfPages }}
                    </div>
                    <h4>Summary</h4>
                    <p>{{ book.summary|nl2br }}</p>

                    {% if is_granted('ROLE_MANAGER') %}
                        <div class="mt-4">
                            <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-primary">Edit Book</a>
                            <form method="post" action="{{ path('book_delete', {'id': book.id}) }}" style="display: inline-block"
                                  onsubmit="return confirm('Are you sure you want to delete this book?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                                <button class="btn btn-danger">Delete Book</button>
                            </form>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h3>Reviews</h3>
        </div>
        <div class="card-body">
            {% if book.reviews|length > 0 %}
                {% for review in book.reviews %}
                    <div class="mb-4 border-bottom pb-3">
                        <div class="d-flex align-items-center mb-2">
                            {% if review.reviewer.profilePicturePath %}
                                <img src="{{ asset('uploads/profile_pictures/' ~ review.reviewer.profilePicturePath) }}"
                                     alt="{{ review.reviewer.name }}" class="rounded-circle me-2" style="width: 40px; height: 40px;">
                            {% else %}
                                <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center me-2"
                                     style="width: 40px; height: 40px;">
                                    {{ review.reviewer.name|first|upper }}
                                </div>
                            {% endif %}
                            <div>
                                <strong>{{ review.reviewer.name }}</strong>
                                <small class="text-muted d-block">{{ review.createdAt|date('F j, Y') }}</small>
                                {% if review.updatedAt %}
                                    <small class="text-muted d-block">(Edited: {{ review.updatedAt|date('F j, Y') }})</small>
                                {% endif %}
                            </div>

                            {% if is_granted('IS_AUTHENTICATED_FULLY') and (app.user == review.reviewer or is_granted('ROLE_MANAGER')) %}
                                <div class="ms-auto">
                                    <a href="{{ path('review_edit', {'id': review.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form method="post" action="{{ path('review_delete', {'id': review.id}) }}"
                                          style="display: inline-block"
                                          onsubmit="return confirm('Are you sure you want to delete this review?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            {% endif %}
                        </div>
                        <p>{{ review.reviewText|nl2br }}</p>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-muted">No reviews yet. Be the first to review this book!</p>
            {% endif %}

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="mt-4">
                    <h4>Add Your Review</h4>
                    {{ form_start(reviewForm) }}
                    {{ form_row(reviewForm.reviewText, {'attr': {'class': 'form-control'}}) }}
                    <button type="submit" class="btn btn-primary mt-2">Submit Review</button>
                    {{ form_end(reviewForm) }}
                </div>
            {% else %}
                <div class="alert alert-info mt-3">
                    <a href="{{ path('app_login') }}">Log in</a> to leave a review.
                </div>
            {% endif %}
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('main') }}" class="btn btn-secondary">Back to Book List</a>
    </div>
</div>
{% endblock %}