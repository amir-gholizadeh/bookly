{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>{{ book.title }}</h2>
            <h5 class="text-muted">by {{ book.author }}</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    {% if book.coverImagePath %}
                        <img src="{{ asset('uploads/cover_images/' ~ book.coverImagePath) }}"
                             alt="{{ book.title }}" class="img-fluid">
                    {% else %}
                        <img src="{{ asset('uploads/cover_images/default_cover.jpg') }}"
                             alt="Default Cover" class="img-fluid">
                    {% endif %}
                </div>
                <div class="col-md-8">
                    <div class="mb-3">
                        <strong>Rating:</strong>
                        {% if book.reviews|length > 0 %}
                            <span class="text-warning">
                                {% set avgRating = book.averageRating %}
                                {% for i in 1..5 %}
                                    {% if i <= avgRating %}
                                        <i class="fas fa-star"></i>
                                    {% elseif i <= avgRating + 0.5 %}
                                        <i class="fas fa-star-half-alt"></i>
                                    {% else %}
                                        <i class="far fa-star"></i>
                                    {% endif %}
                                {% endfor %}
                            </span>
                            <small>({{ book.reviews|length }} review{% if book.reviews|length > 1 %}s{% endif %})</small>
                        {% else %}
                            <span class="text-muted">No ratings yet</span>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        <strong>Genre:</strong> {{ book.genre }}
                    </div>
                    <div class="mb-3">
                        <strong>Number of Pages:</strong> {{ book.numberOfPages }}
                    </div>
                    <h4>Summary</h4>
                    <p>{{ book.summary|nl2br }}</p>

                    {% if is_granted('ROLE_MANAGER') %}
                        <div class="mt-3">
                            <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-primary">Edit Book</a>
                            <form method="post" action="{{ path('book_delete', {'id': book.id}) }}" style="display: inline-block"
                                onsubmit="return confirm('Are you sure you want to delete this book?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                                <button class="btn btn-danger">Delete Book</button>
                            </form>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h3>Reviews</h3>
        </div>
        <div class="card-body">
            {% if book.reviews|length > 0 %}
                {% for review in book.reviews %}
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-2">
                                {% if review.reviewer.profilePicturePath %}
                                    <img src="{{ asset('uploads/profile_pictures/' ~ review.reviewer.profilePicturePath) }}"
                                         alt="{{ review.reviewer.name }}" class="rounded-circle me-2" style="width: 40px; height: 40px;">
                                {% else %}
                                    <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center me-2"
                                         style="width: 40px; height: 40px;">
                                        {{ review.reviewer.name|first|upper }}
                                    </div>
                                {% endif %}
                                <div>
                                    <strong>{{ review.reviewer.name }}</strong>
                                    <div class="text-warning">
                                        {% for i in 1..5 %}
                                            {% if i <= review.rating %}
                                                <i class="fas fa-star"></i>
                                            {% else %}
                                                <i class="far fa-star"></i>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                    <small class="text-muted d-block">{{ review.createdAt|date('F j, Y') }}</small>
                                    {% if review.updatedAt %}
                                        <small class="text-muted d-block">(Edited: {{ review.updatedAt|date('F j, Y') }})</small>
                                    {% endif %}
                                </div>
                                {% if is_granted('IS_AUTHENTICATED_FULLY') and (app.user == review.reviewer or is_granted('ROLE_MANAGER')) %}
                                    <div class="ms-auto">
                                        <a href="{{ path('review_edit', {'id': review.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form method="post" action="{{ path('review_delete', {'id': review.id}) }}" style="display: inline-block"
                                              onsubmit="return confirm('Are you sure you want to delete this review?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ review.id) }}">
                                            <button class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                {% endif %}
                            </div>
                            <p>{{ review.reviewText|nl2br }}</p>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-muted">No reviews yet. Be the first to review this book!</p>
            {% endif %}
        </div>
    </div>

    <div class="mt-3">
        {% if reviewForm %}
            <div class="card">
                <div class="card-header">
                    <h3>Write a Review</h3>
                </div>
                <div class="card-body">
                    {{ form_start(reviewForm) }}

                    <div class="mb-3">
                        {{ form_label(reviewForm.rating) }}
                        <div class="rating-stars">
                            {{ form_widget(reviewForm.rating) }}
                        </div>
                        {{ form_errors(reviewForm.rating) }}
                    </div>

                    {{ form_row(reviewForm.reviewText, {'attr': {'class': 'form-control'}}) }}
                    <button type="submit" class="btn btn-primary mt-3">Post Review</button>
                    {{ form_end(reviewForm) }}
                </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> Please <a href="{{ path('app_login') }}">log in</a> to write a review.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}