
{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Edit Review for "{{ book.title }}"</h2>
        </div>
        <div class="card-body">
            {{ form_start(reviewForm) }}
            {{ form_row(reviewForm.reviewText, {'attr': {'class': 'form-control'}}) }}
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Update Review</button>
                <a href="{{ path('book_show', {'id': book.id}) }}" class="btn btn-secondary">Cancel</a>
            </div>
            {{ form_end(reviewForm) }}
        </div>
    </div>
</div>
{% endblock %}